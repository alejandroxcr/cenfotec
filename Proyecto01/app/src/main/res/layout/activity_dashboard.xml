<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.muybold.proyecto01.DashboardActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/str_welcome"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/almostBlack"
        android:layout_marginTop="@dimen/button_margins"
        android:textSize="@dimen/welcome_font_size"/>

    <Button
        android:id="@+id/callMariaButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_callmaria"
        android:layout_marginTop="@dimen/button_margins"
        android:layout_marginLeft="@dimen/title_sides_margin" />

</LinearLayout>
